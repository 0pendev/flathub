{
  "app-id": "dev.gbstudio.gb-studio",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "19.08",
  "sdk": "org.freedesktop.Sdk",
  "base": "org.electronjs.Electron2.BaseApp",
  "base-version": "19.08",
  "command": "gb-studio",
  "separate-locales": false,
  "rename-desktop-file": "gb-studio.desktop",
  "finish-args": [
    "--device=dri",
    "--filesystem=home",
    "--share=ipc",
    "--socket=pulseaudio",
    "--socket=x11"
  ],
  "modules": [
    {
      "name": "gbstudio",
      "buildsystem": "simple",
      "build-commands": [
        "ar x gb-studio-master-linux_x86_64.deb",
        "tar xf data.tar.xz -C /app --strip-components=2",
        "install -Dm755 gb-studio /app/bin/gb-studio",
        "desktop-file-edit --set-icon=$FLATPAK_ID /app/share/applications/gb-studio.desktop",
        "install -Dm644 gb-studio.png /app/share/icons/hicolor/512x512/apps/${FLATPAK_ID}.png",
        "install -Dm644 gb-studio.metainfo.xml /app/share/metainfo/${FLATPAK_ID}.metainfo.xml"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/chrismaltby/gb-studio/releases/download/v1.2.1/GB-Studio-Linux-DEB-1.2.1.zip",
          "sha256": "0e00fdb51c15a4cee53b2f50cc54212b4d8da059b7d6e62ecfc14c5949333a73"
        },
        {
          "type": "file",
          "path": "gb-studio.png"
        },
        {
          "type": "file",
          "path": "gb-studio.metainfo.xml"
        },
        {
          "type": "script",
          "commands": [
            "exec /app/lib/gb-studio/gb-studio \"$@\""
          ],
          "dest-filename": "gb-studio"
        }
      ]
    }
  ]
}
